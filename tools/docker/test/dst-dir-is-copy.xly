exists dst :

    type dir &&
    dir-contents -recursive matches -full {
        src	                   : type dir
        src/a.py               : type file && contents equals -file -rel-act repo/src/a.py
        src/b.py               : type file

	    test                   : type dir
	    test/sub               : type dir
        test/sub/x.py          : type file

	    examples               : type dir
	    examples/example.case  : type file

        CHANGELOG.md           : type file
        COPYRIGHT              : type file
        LICENSE                : type file
        MANIFEST.in            : type file
        Makefile               : type file
        README.rst             : type file
        setup.py               : type file
    }
