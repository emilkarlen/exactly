[setup]

def files-matcher CONSTANT = constant true

def files-matcher NUM_FILES = num-files == 1

def files-matcher NEGATION = ! NUM_FILES

def files-matcher EMPTY = empty

def files-matcher FOR_ALL = every file : type dir

def files-matcher EXISTS = any file : contents empty

def files-matcher SELECTION = -selection type file
                               empty

def files-matcher PRUNE     = -prune type symlink
                               empty

def files-matcher EQUALS_EMPTY  = equals { }

def files-matcher EQUALS_N_EMPTY = equals {
  a
  b   : type file
  b   : contents empty
  c/f
  d   : type dir
  e   : dir-contents contains { f }
}

def files-matcher CONTAINS_EMPTY  = contains { }

def files-matcher CONTAINS_N_EMPTY = contains {
  a
  b   : type file
  b   : contents empty
  c/f
  e   : dir-contents equals { f }
}
