#
# The predefined REPLACE_TEST_CASE_DIRS transformer replaces absolute paths in a file.
#
# It replaces paths that equals any of the Exactly test case directories,
# with the name of the corresponding environment variable/builtin symbol.
#

[setup]


file my-file-with-abs-paths.txt = <<EOF
@[EXACTLY_ACT]@
@[EXACTLY_TMP]@
@[EXACTLY_ACT_HOME]@
@[EXACTLY_HOME]@
EOF


[act]


$ echo $PWD


[assert]


stdout --transformed-by REPLACE_TEST_CASE_DIRS equals <<EOF
EXACTLY_ACT
EOF


contents my-file-with-abs-paths.txt --transformed-by REPLACE_TEST_CASE_DIRS equals <<EOF
EXACTLY_ACT
EXACTLY_TMP
EXACTLY_HOME
EXACTLY_HOME
EOF

# Above EXACTLY_HOME is used, if
#
#  @[EXACTLY_HOME]@ and @[EXACTLY_ACT_HOME]@
#
# are identical
