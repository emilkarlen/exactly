#
# The "select" transformer selects lines that matches a given LINE-MATCHER,
#
# all other lines are discarded.
#


[setup]


file my-file.txt <<EOF
first
second
third
EOF

def line-matcher THIRD = regex third

[assert]


contents my-file.txt --transformation ( select regex 'second' ) equals <<EOF
second
EOF

contents my-file.txt --transformation THIRD equals <<EOF
third
EOF
