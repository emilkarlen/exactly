[setup]

dir  dir-1
dir  dir-2
file file-A.txt = 'A'
file file-B.txt = 'B'
file file-C.txt = 'C'

[assert]

dir-contents .
             -selection type file && contents equals 'A'
             num-files == 1

dir-contents .
             -selection type file && ! contents equals 'A'
             num-files == 2

dir-contents .
             -selection type dir || ( type file && contents equals 'A' )
             num-files == 3
