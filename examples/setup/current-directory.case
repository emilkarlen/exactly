#
# The "cd" instruction sets the "current directory".
#


[setup]


file in-root-dir.txt

dir execution-dir

cd execution-dir

file in-execution-dir.txt


[act]


list-files-under-current-directory


[assert]


stdout equals <<EOF
in-execution-dir.txt
EOF

exists --regular in-execution-dir.txt

cd ..

exists --regular in-root-dir.txt

exists --regular execution-dir/in-execution-dir.txt
